<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.example.qiu.androidlabs.WeatherForecast">

    <ImageView
        android:id="@+id/currentWeather"
        android:layout_gravity="center_vertical|center_horizontal"
        android:layout_marginStart="48dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/minTemp"
        android:layout_marginTop="26dp"
        android:minHeight="200dp"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/minTemp"
        android:layout_marginTop="75dp"
        android:layout_below="@+id/currentWeather"
        android:layout_alignStart="@+id/maxTemp"
        android:hint="Minimum Temperature" />

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="101dp"
        android:layout_height="wrap_content"
        android:id="@+id/weatherBar"
        android:visibility="invisible"
        android:layout_marginBottom="61dp"
        android:layout_alignParentBottom="true"
        android:layout_toEndOf="@+id/maxTemp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentTemp"
        android:textSize="18sp"
        android:layout_below="@+id/currentWeather"
        android:layout_alignStart="@+id/minTemp" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/maxTemp"
        android:layout_below="@+id/minTemp"
        android:layout_alignParentStart="true"
        android:layout_marginTop="50dp"
        android:hint="Maximum Temperature" />

</RelativeLayout>
